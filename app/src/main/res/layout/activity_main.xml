<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.fastkylin.reboot_tools.MainActivity"
    >
<LinearLayout

    android:background="@drawable/back_shape_back"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <TextView
            android:gravity="center"

            android:id="@+id/btn_reboot"
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:background="@drawable/ripple"
            android:text="重启"
            android:textColor="@color/deepskyblue"
            android:textSize="20dp"
            android:weightSum="1" />
        <TextView
            android:gravity="center"

            android:id="@+id/btn_reboot_quick"
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:background="@drawable/ripple"
            android:text="快速启动"
            android:textColor="@color/deepskyblue"
            android:textSize="20dp"
            android:weightSum="1" />


        <TextView
            android:gravity="center"
            android:id="@+id/btn_reboot_recovery"
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:background="@drawable/ripple"
            android:text="recovery"
            android:textColor="@color/deepskyblue"
            android:textSize="20dp"
      />


        <TextView
            android:gravity="center"
            android:id="@+id/btn_reboot_fastboot"
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:background="@drawable/ripple"
            android:text="fastboot"
            android:textColor="@color/deepskyblue"
            android:textSize="20dp"

            android:weightSum="1" />

        <TextView
            android:gravity="center"
            android:id="@+id/btn_reboot_edl"
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:background="@drawable/ripple"
            android:text="edl"
            android:textColor="@color/deepskyblue"
            android:textSize="20dp"
            android:weightSum="1" />


        <TextView
            android:gravity="center"
            android:id="@+id/btn_reboot_safe"
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:background="@drawable/ripple"
            android:text="安全模式"
            android:textColor="@color/deepskyblue"
            android:textSize="20dp"
            android:weightSum="1" />
        <TextView
            android:gravity="center"
            android:id="@+id/btn_shutdown"
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:background="@drawable/ripple"
            android:text="关机"
            android:textColor="@color/deepskyblue"
            android:textSize="20dp"
            android:weightSum="1" />
    <TextView
    android:gravity="center"
    android:id="@+id/btn_test"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_margin="0dp"
    android:background="@drawable/ripple"
    android:text="主题"
    android:textColor="@color/colortext"
    android:textSize="20dp"
    android:weightSum="1" />
        <TextView
            android:gravity="center"
            android:id="@+id/btn_about"
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:background="@drawable/ripple"
            android:text="关于"
            android:textColor="@color/deepskyblue"
            android:textSize="20dp"
            android:weightSum="1" />


        <TextView
            android:gravity="center"
            android:id="@+id/btn_exit"
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:background="@drawable/ripple"
            android:text="退出"
            android:textColor="@color/deepskyblue"
            android:textSize="20dp"
            android:weightSum="1" />

</LinearLayout>
</ScrollView>

